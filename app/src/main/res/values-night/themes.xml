<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DemeterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/demeterGreen</item>
        <item name="colorPrimaryVariant">@color/secondaryGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/actionOrange</item>
        <item name="colorSecondaryVariant">@color/accentBeige</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/demeterGreen</item>
        <item name="fontFamily">@font/pridi_medium</item>
    </style>


</resources>