<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!--Plant Name-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="243dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="Kenia Palm"
        android:textAlignment="center"
        android:textColor="#519872"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <!--Plant Image-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kenia_palm" />

    <!--Current Stats Card-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="320dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:padding="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/currentStatsTitle"
            android:layout_width="141dp"
            android:layout_height="28dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:text="Current Stats"
            android:textAlignment="center"
            android:textColor="#519872"
            android:textSize="24sp" />

        <TextView
            android:layout_width="131dp"
            android:layout_height="23dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/roboto"
            android:text="Moisture Level:"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/moistureLevelDisplay"
            android:layout_width="48dp"
            android:layout_height="23dp"
            android:layout_marginLeft="216dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/roboto"
            android:text="XX"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginLeft="264dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/roboto"
            android:text="mm"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="131dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/roboto"
            android:text="Light Level:"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lightLevelDisplay"
            android:layout_width="32dp"
            android:layout_height="23dp"
            android:layout_marginLeft="232dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/roboto"
            android:text="XX"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginLeft="264dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="80dp"
            android:fontFamily="@font/roboto"
            android:text="nm"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <!--Plant Settings Card-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_marginTop="16dp"
        android:padding="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/plantSettingsTitle"
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:text="Plant Settings"
            android:textAlignment="center"
            android:textColor="#519872"
            android:textSize="24sp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="23dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/roboto"
            android:text="Moisture Level"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="131dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="92dp"
            android:fontFamily="@font/roboto"
            android:text="Light Level:"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editMoistureLevel"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="38dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editLightLevel"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="84dp"
            android:ems="10"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:inputType="number"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/updateValuesButton"
            android:onClick="submitNewValue"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="140dp"
            android:text="Update Values" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>